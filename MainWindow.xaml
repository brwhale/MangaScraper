<Window x:Class="Manga_Scraper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Manga_Scraper"
        mc:Ignorable="d"
        Title="Manga Scraper" Height="450" Width="360">
    <Grid>
        <TextBox x:Name="UrlBox" HorizontalAlignment="Left" Margin="80,83,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="214"/>
        <Label Content="Url to scrape" HorizontalAlignment="Left" Margin="80,52,0,0" VerticalAlignment="Top"/>
        <Label Content="Output Name" HorizontalAlignment="Left" Margin="80,131,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ScrapeButton" Content="Scrape!" HorizontalAlignment="Left" Margin="119,0,0,45" Width="112" Height="57" VerticalAlignment="Bottom" FontSize="18" Click="ScrapeButton_Click"/>
        <TextBlock x:Name="StatusBox" HorizontalAlignment="Left" Margin="121,286,0,0" Text="Ready" TextWrapping="Wrap" VerticalAlignment="Top" Height="18" Width="110"/>
        <Button x:Name="NameBox" Content="" HorizontalAlignment="Left" Margin="82,162,0,0" VerticalAlignment="Top" Width="212" Background="White" Click="NameBox_Click"/>

    </Grid>
</Window>
